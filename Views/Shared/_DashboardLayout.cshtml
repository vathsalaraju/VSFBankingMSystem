<!DOCTYPE html>

<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] BankingManagementSystem</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/BankingManagementSystem.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark">
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
			<div class="container-fluid">

				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
					<div class="logofile">
						<img src="~/lib/images/Logo2.jpeg" alt="Images" />
					</div>
				</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"> Account Details </a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="AddPayee" asp-action="Index">Fund Transfer</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">Change Password</a>
						</li>

					</ul>

					<div class="topnav-right">
						<ul class="navbar-nav flex-grow-1">
							<li class="nav-item"> <a class="nav-link text-light" asp-area=""> <img src="https://cdn.pixabay.com/photo/2020/07/01/12/58/icon-5359553_960_720.png" class="img-center" height="30" width="30" /></a></li>
						</ul>
					</div>

				</div>
			</div>
		</nav>
	</header>

	<div class="container p-0 mw-100 ">
		<main role="main">
			<div class="wrapper mh-100">
				<div class="sidebar">
					<h2>Sidebar</h2>
					<ul>
						<li><a href="#"><i class="fas fa-home"></i>Home</a></li>
						<li><a href="#"><i class="fas fa-user"></i>Profile</a></li>
						<li><a href="#"><i class="fas fa-address-card"></i>About</a></li>
						<li><a href="#"><i class="fas fa-address-book"></i>Contact</a></li>
					</ul>
				</div>
			</div>
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-dark">
		<div class="container">
			&copy; 2022 - VSFBank - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
